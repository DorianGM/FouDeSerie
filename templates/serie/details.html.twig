{% extends 'base.html.twig' %}

{% block title %}Hello SerieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">



<p class="col-md-8 fs-4">{{serie.titre}}</p>
<p class="col-md-8 fs-4">{{serie.resume}}</p>
<p class="col-md-8 fs-4">{{serie.premiereDiffusion|date("Y-m-d")}}</p>
<p class="col-md-8 fs-4">{{serie.duree|date("H:i:s")}}</p>

{% endblock %}

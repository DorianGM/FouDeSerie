{% extends 'base.html.twig' %}

{% block title %}Hello SerieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">



<ul>
{% for laserie in series %}
<div class="card" style="width: 40rem;">
  <img class="card-img-top" src="{{laserie.image}}">
  <div class="card-body">
    <h5 class="card-title">{{laserie.titre}}</h5>
    <p class="card-text">{{laserie.resume}}</p>
    <a href="{{path('details', {'id':laserie.id}) }}" class="btn btn-primary">En savoir plus </a>
  </div>
</div>
{% endfor %}
</ul>

{% endblock %}

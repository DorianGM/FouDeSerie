{% extends 'base.html.twig' %}

	{% block javascripts %}
	<script type="text/javascript" src="{{asset("js/monScript.js")}}"></script>
		<script type="text/javascript" src="{{asset("js/likeWithFetch.js")}}"></script>
	{% endblock %}

{% block title %}Hello SerieController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 80%;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{{include('genre/liste.html.twig')}}
		<div class="row row-cols-1 row-cols-md-3 g-4">

			{% for laserie in series %}
				<div class="col">
					<div class="card">
						<img class="card-img-top" src="{{laserie.image}}">
						<div class="card-body">
							<h5 class="card-title">{{laserie.titre}}</h5>
							<p class="card-text">{{laserie.resume}}</p>
							<a href="{{path('details', {'id':laserie.id}) }}" class="btn btn-primary">En savoir plus
							</a>
							<a href="{{ path('like', {'id': laserie.id})}}" class="js-a-likes">
							<i class="far fa-thumbs-up"></i>
							<span class="js-nb-like">{{laserie.likes}}</span>
							<span >J'aime</span>
							</a>
							
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}
